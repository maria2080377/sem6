#include <iostream>     //Задача 2
#include <cctype>
#include <cstring>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Russian");
    char strk[100];
    cout << "Введите строку: ";
    cin.getline(strk, 100);
    char str2[100];
    char* k2 = str2;

    for (int i = 0; i < strlen(strk); i++) {
        if (strk[i] != ' ') {
            *k2 = strk[i];
            ++k2;
        }
    }
    *k2 = '\0';

    int c = 0;

    for (int i = 0; i < strlen(str2); i++) {
        bool k = true;
        for (int j = 0; j < i; j++) {
            if ( str2[i] == str2[j]) {
                k = false;
                break;
            }
        }
        if (k) {
            c++;
        }
    }

    cout << "Количество уникальных символов: " << c;
    return 0;
}
